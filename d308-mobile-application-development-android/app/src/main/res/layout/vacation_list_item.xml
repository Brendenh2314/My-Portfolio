<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Vacation Name Label -->
    <TextView
        android:id="@+id/labelVacationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vacation Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Vacation Name Details -->
    <TextView
        android:id="@+id/vacationListItemTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Vacation Name Details"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="@id/labelVacationName"
        app:layout_constraintTop_toBottomOf="@id/labelVacationName"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>